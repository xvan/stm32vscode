    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenOCD GDB",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "arm",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [],
            "externalConsole": false,
            "debugServerArgs": "-f ${workspaceFolder}/openocd.cfg",
            "serverLaunchTimeout": 20000,
            "filterStderr": true,
            "filterStdout": true,
            "serverStarted": "Info : Listening on port 3333 for gdb connections",
            "setupCommands": [
                { "text": "-enable-pretty-printing", "description": "Habilitar la impresión con sangría para gdb", "ignoreFailures": true },
                { "text": "-target-select remote localhost:3333", "description": "connect to target", "ignoreFailures": false },
                { "text": "-file-exec-and-symbols ${command:cmake.launchTargetPath}", "description": "load file", "ignoreFailures": false},
                { "text": "-interpreter-exec console \"monitor endian little\"", "ignoreFailures": false },
                { "text": "-interpreter-exec console \"monitor reset\"", "ignoreFailures": false },
                { "text": "-interpreter-exec console \"monitor halt\"", "ignoreFailures": false },
                //{ "text": "-interpreter-exec console \"monitor arm semihosting enable\"", "ignoreFailures": false },
                { "text": "-target-download", "description": "flash target", "ignoreFailures": false }
            ],
            "logging": {
                "moduleLoad": true,
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            },
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb-multiarch",
                "debugServerPath": "openocd"
            }
        }
    ]
}